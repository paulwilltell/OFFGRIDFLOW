apiVersion: v1
kind: Secret
metadata:
  name: offgridflow-secrets
  namespace: offgridflow
type: Opaque
stringData:
  # Database credentials
  # Format: postgresql://username:password@host:port/dbname?sslmode=require
  database-url: "postgresql://offgridflow:CHANGEME@postgres-service:5432/offgridflow?sslmode=require"
  
  # Redis URL
  # Format: redis://host:port/db
  redis-url: "redis://redis-service:6379/0"
  
  # JWT secret for authentication tokens
  # Generate with: openssl rand -base64 32
  jwt-secret: "CHANGEME_GENERATE_SECURE_SECRET"
  
  # Stripe API keys
  stripe-secret: "sk_test_CHANGEME"
  stripe-webhook-secret: "whsec_CHANGEME"
  
  # OpenAI API key
  openai-api-key: "sk-CHANGEME"
  
  # AWS credentials for connector
  aws-access-key-id: "CHANGEME"
  aws-secret-access-key: "CHANGEME"
  
  # Azure credentials for connector
  azure-tenant-id: "CHANGEME"
  azure-client-id: "CHANGEME"
  azure-client-secret: "CHANGEME"
  
  # GCP service account key (JSON)
  gcp-service-account-key: |
    {
      "type": "service_account",
      "project_id": "CHANGEME"
    }
  
  # SAP credentials
  sap-username: "CHANGEME"
  sap-password: "CHANGEME"

---
# Instructions for creating secrets from Terraform outputs:
# kubectl create secret generic offgridflow-secrets \
#   --from-literal=database-url="$(terraform output -raw database_url)" \
#   --from-literal=redis-url="$(terraform output -raw redis_url)" \
#   --from-literal=jwt-secret="$(openssl rand -base64 32)" \
#   --from-literal=stripe-secret="${STRIPE_SECRET_KEY}" \
#   --from-literal=openai-api-key="${OPENAI_API_KEY}"
