{
  "dashboard": {
    "title": "OffGridFlow - Worker Performance",
    "tags": ["offgridflow", "worker", "batch"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Batch Processing Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(worker_batches_processed_total{job=\"offgridflow-worker\"}[5m])",
            "legendFormat": "{{worker_id}} batches/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Batches/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Batch Processing Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(worker_batch_duration_seconds_bucket{job=\"offgridflow-worker\"}[5m]))",
            "legendFormat": "{{batch_type}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(worker_batch_duration_seconds_bucket{job=\"offgridflow-worker\"}[5m]))",
            "legendFormat": "{{batch_type}} p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Queue Depth",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "worker_queue_depth{job=\"offgridflow-worker\"}",
            "legendFormat": "{{queue_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Pending Jobs"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 100, "colorMode": "warning"},
          {"value": 500, "colorMode": "critical"}
        ]
      },
      {
        "id": 4,
        "title": "Batch Success Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(worker_batches_processed_total{job=\"offgridflow-worker\",status=\"success\"}[5m])) / sum(rate(worker_batches_processed_total{job=\"offgridflow-worker\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 95},
              {"color": "green", "value": 99}
            ]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Failed Batches",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(worker_batches_processed_total{job=\"offgridflow-worker\",status=\"failed\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "value",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 10}
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "Batch Size Distribution",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(worker_batch_size_bucket{job=\"offgridflow-worker\"}[5m]))",
            "legendFormat": "p50 size",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(worker_batch_size_bucket{job=\"offgridflow-worker\"}[5m]))",
            "legendFormat": "p95 size",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(worker_batch_size_bucket{job=\"offgridflow-worker\"}[5m]))",
            "legendFormat": "p99 size",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Records per Batch"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Throughput (Records/sec)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(worker_records_processed_total{job=\"offgridflow-worker\"}[5m]))",
            "legendFormat": "Total throughput",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Records/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Worker Memory Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "go_memstats_heap_inuse_bytes{job=\"offgridflow-worker\"}",
            "legendFormat": "{{instance}} heap",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Active Workers",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(up{job=\"offgridflow-worker\"})",
            "legendFormat": "Active workers",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Workers"},
          {"format": "short"}
        ]
      }
    ]
  }
}
